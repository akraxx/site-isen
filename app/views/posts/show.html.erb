<p>
  <b>Name:</b>
  <%=h @post.name %>
</p>

<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Content:</b>
  <%=h @post.content %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |c| %>
	<p>
		<b>Commenter : </b>
		<%=h c.commenter %>
	</p>
	<p>
		<b>Body :</b>
		<%=h c.body %>
	</p>
	<%= link_to 'Delete comment', post_comment_path(@post, c), :confirm => "Are you sure?", :method => "delete" %>
<% end %>
	
<%= link_to 'Manage comments', post_comments_path(@post) %> |
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
